# Copy this file to /etc/openclaw/openclaw.env and set secure values.
# Permissions should be: root:openclaw and mode 640.

OPENCLAW_GATEWAY_TOKEN=REPLACE_WITH_LONG_RANDOM_VALUE
ANTHROPIC_API_KEY=REPLACE_ME
TELEGRAM_BOT_TOKEN=REPLACE_ME

OPENCLAW_HOME=/var/lib/openclaw
OPENCLAW_STATE_DIR=/var/lib/openclaw/.openclaw
OPENCLAW_CONFIG_PATH=/etc/openclaw/openclaw.json

# Optional
# OPENCLAW_WEBSEARCH_API_KEY=REPLACE_ME
# OPENCLAW_LOG_LEVEL=info

# Backups (restic)
# RESTIC_REPOSITORY=/backups/openclaw
# RESTIC_PASSWORD_FILE=/etc/openclaw/restic-password

# Optional alert webhook for scripts/health checks
# OPENCLAW_ALERT_WEBHOOK_URL=https://example.net/webhook
